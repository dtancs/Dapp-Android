<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listitem_users_list_height"
    android:paddingBottom="@dimen/listitem_users_list_padding_bottom">

    <ImageView
        android:id="@+id/imageview_user_avatar"
        android:layout_width="@dimen/listitem_users_list_avatar"
        android:layout_height="@dimen/listitem_users_list_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:cropToPadding="true"
        android:padding="@dimen/listitem_users_list_avatar_padding"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/placeholder_avatar" />

    <TextView
        android:id="@+id/textview_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imageview_user_avatar"
        android:layout_toRightOf="@+id/imageview_user_avatar"
        android:text="User"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
</RelativeLayout>