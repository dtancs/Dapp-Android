<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_root_micropostlist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/listitem_micropost_list_margin_topbottom"
    android:paddingTop="@dimen/listitem_micropost_list_margin_topbottom">

    <ImageView
        android:id="@+id/imageview_micropost_user_avatar"
        android:layout_width="@dimen/listitem_users_list_avatar"
        android:layout_height="@dimen/listitem_users_list_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/placeholder_avatar" />

    <TextView
        android:id="@+id/textview_micropost_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/imageview_micropost_user_avatar"
        android:layout_toRightOf="@+id/imageview_micropost_user_avatar"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_micropost_timeago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textview_micropost_user_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingRight="2dp"
        android:text="" />

    <TextView
        android:id="@+id/textview_micropost_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textview_micropost_user_name"
        android:layout_alignStart="@+id/textview_micropost_user_name"
        android:layout_below="@+id/textview_micropost_user_name"
        android:layout_marginTop="4dp"
        android:text=""
        android:textColor="@android:color/black" />


</RelativeLayout>